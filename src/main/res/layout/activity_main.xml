<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/fullnameFormulario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="#BEDADD"
            android:hint="Formulario de registro"
            android:inputType="text"
            android:shadowColor="#C6BEBE"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textColorHint="#020101"
            android:textColorLink="#2035A6"
            android:textSize="34sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/fullTexto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:hint="Completa los campos para registrarte y hacer uso de la aplicacion "
            android:textColor="@color/black"
            android:textColorHint="#020101"
            android:textSize="18sp"
            android:textStyle="normal" />
        <EditText
            android:id="@+id/fullnameInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:inputType="text"
            android:hint="Nombres completos"
            />

        <EditText
            android:id="@+id/fullapellidosInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:inputType="text"
            android:hint="Apellidos completos"
            />

        <EditText
            android:id="@+id/fullcorreoInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:inputType="text"
            android:hint="Correo"
            />

        <EditText
            android:id="@+id/fullnumeroInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:inputType="textPassword"
            android:hint="ContraseÃ±a"/>

        <TextView
            android:id="@+id/fullnameLista"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:hint="Elige un rol : "
            android:textColor="@color/black"
            android:textColorHint="#020101"
            android:textSize="18sp"
            android:textStyle="normal" />
        <Spinner
            android:id="@+id/spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/Roles"
            />

        <Button
            android:id="@+id/btnExplicit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Registrar"
            />



    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>